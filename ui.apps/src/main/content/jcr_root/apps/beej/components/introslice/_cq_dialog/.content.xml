<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Intro Slice Options"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <appearance
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Appearance"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <width
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Intro Slice Max Width"
                                                    name="./introSliceMaxWidth">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Full Width (Default)"
                                                            value=""/>
                                                    <large
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Large Width 1200px"
                                                            value="beej-intro-slice--margins"/>
                                                </items>
                                            </width>
                                            <background
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Intro Slice Background Color"
                                                    name="./introSliceBackgroundColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                            jcr:primaryType="nt:unstructured"
                                                            text="White Background (Default)"
                                                            value=""/>
                                                    <grey
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Grey Background"
                                                            value="beej-intro-slice--background-grey"/>
                                                    <pink
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Pink Background"
                                                            value="beej-intro-slice--background-pink"/>
                                                    <purple
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Purple Background"
                                                            value="beej-intro-slice--background-purple"/>
                                                    <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue Background"
                                                            value="beej-intro-slice--background-blue"/>
                                                    <orange
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Orange Background"
                                                            value="beej-intro-slice--background-orange"/>
                                                </items>
                                            </background>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </appearance>
                    <icon
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Icon"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <introIcon
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Intro Slice Icon"
                                                    fieldDescription="Drop an icon from the DAM here"
                                                    fileNameParameter="./primaryLogo"
                                                    fileReferenceParameter="./introSliceIcon"
                                                    mimeTypes="[image]"
                                                    multiple="{Boolean}false"
                                                    name="./file"
                                                    title="Primary Logo Upload"
                                                    useHTML5="{Boolean}true"/>
                                            <iconSize
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                    fieldLabel="Icon Size"
                                                    name="./introSliceIconSize">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Large (Default)"
                                                            value=""/>
                                                    <small
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Small"
                                                            value="beej-intro-slice__icon--small"/>
                                                </items>
                                            </iconSize>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </icon>
                    <content
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <introSliceTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Intro Slice Title"
                                                    name="./introSliceTitle"/>
                                            <introSliceText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldLabel="Intro Slice Text"
                                                    name="./introSliceText"/>
                                            <ctaURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                    fieldLabel="CTA Path"
                                                    name="./introSliceCTAPath"
                                                    rootPath="/content"/>
                                            <ctaText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="CTA Text"
                                                    name="./introSliceCTAText"/>
                                            <ctaColor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="CTA Color"
                                                    name="./introSliceCTAColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Grey (Default)"
                                                            value=""/>
                                                    <pink
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Pink"
                                                            value="beej-button--pink"/>
                                                    <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue"
                                                            value="beej-button--blue"/>
                                                    <purple
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Purple"
                                                            value="beej-button--purple"/>
                                                    <orange
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Orange"
                                                            value="beej-button--orange"/>
                                                </items>
                                            </ctaColor>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </content>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>