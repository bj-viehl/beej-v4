<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Hero Options"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/tabs"
                    maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <heroContent
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Content"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <backgroundImage
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                    allowUpload="{Boolean}false"
                                                    autoStart="{Boolean}false"
                                                    class="cq-droptarget"
                                                    fieldLabel="Background Image"
                                                    fieldDescription="Drop a logo from the DAM here"
                                                    fileNameParameter="./primaryLogo"
                                                    fileReferenceParameter="./heroBackgroundImage"
                                                    mimeTypes="[image]"
                                                    multiple="{Boolean}false"
                                                    name="./file"
                                                    title="Primary Logo Upload"
                                                    useHTML5="{Boolean}true"/>
                                            <heroTitle
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="Hero Title"
                                                    name="./heroTitle"/>
                                            <heroText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    fieldLabel="Hero Text"
                                                    name="./heroText"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </heroContent>
                    <cta
                            jcr:primaryType="nt:unstructured"
                            jcr:title="CTA"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <ctaURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                                                    fieldLabel="CTA Path"
                                                    name="./heroCTAPath"
                                                    rootPath="/content"/>
                                            <ctaText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldLabel="CTA Text"
                                                    name="./heroCTAText"/>
                                            <ctaColor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="CTA Color"
                                                    name="./heroCTAColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <default
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Grey (Default)"
                                                            value=""/>
                                                    <white
                                                            jcr:primaryType="nt:unstructured"
                                                            text="White"
                                                            value="beej-button--white"/>
                                                    <pink
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Pink"
                                                            value="beej-button--pink"/>
                                                    <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue"
                                                            value="beej-button--blue"/>
                                                    <purple
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Purple"
                                                            value="beej-button--purple"/>
                                                    <orange
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Orange"
                                                            value="beej-button--orange"/>
                                                </items>
                                            </ctaColor>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </cta>
                    <appearance
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Appearance"
                            sling:resourceType="granite/ui/components/coral/foundation/container"
                            margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <width
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Hero Max Width"
                                                    name="./heroMaxWidth">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <fullWidth
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Full Width (Default)"
                                                            value=""/>
                                                    <large
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Max Width Lg 1200px"
                                                            value="beej-hero--margins"/>
                                                </items>
                                            </width>
                                            <heroBackgroundColor
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Hero Background Color"
                                                    name="./heroBackgroundColor">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Grey (Default)"
                                                            value=""/>
                                                    <pink
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Pink"
                                                            value="beej-hero--pink-overlay"/>
                                                    <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue"
                                                            value="beej-hero--blue-overlay"/>
                                                    <purple
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Purple"
                                                            value="beej-hero--purple-overlay"/>
                                                    <orange
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Orange"
                                                            value="beej-hero--orange-overlay"/>
                                                </items>
                                            </heroBackgroundColor>
                                            <contentBackground
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldLabel="Content Background Color"
                                                    name="./contentBackground">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <none
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Transparent (Default)"
                                                            value=""/>
                                                    <outline
                                                            jcr:primaryType="nt:unstructured"
                                                            text="White Outline"
                                                            value="beej-hero__content--outline-white"/>
                                                    <white
                                                            jcr:primaryType="nt:unstructured"
                                                            text="White Background"
                                                            value="beej-hero__content--background-white"/>
                                                    <pink
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Pink Background"
                                                            value="beej-hero__content--background-pink"/>
                                                    <purple
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Purple Background"
                                                            value="beej-hero__content--background-purple"/>
                                                    <blue
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Blue Background"
                                                            value="beej-hero__content--background-blue"/>
                                                </items>
                                            </contentBackground>
                                            <contentAlignment
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                    fieldLabel="Content Alignment"
                                                    name="./contentAlignment">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <center
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Center (Default)"
                                                        selected="true"
                                                        value="beej-hero__container--center-align"/>
                                                    <left
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Left"
                                                        value="beej-hero__container--left-align"/>
                                                    <right
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right"
                                                        value="beej-hero__container--right-align"/>
                                                </items>
                                            </contentAlignment>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </appearance>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>